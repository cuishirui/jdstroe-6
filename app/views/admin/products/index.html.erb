<h1>Product list</h1>

<div class="container">
  <%= link_to("Add product", new_admin_product_path(@product), class: "btn btn-primary pull-right")%>
</div>
<div class="container">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th width="220">image</th>
      <th>description</th>

      <th>quantity</th>
      <th>price</th>
      <th>Options</option></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product|%>
    <tr>
      <td><%= product.id%></td>
      <td>
        <%= link_to admin_product_path(product) do %>
        <% if product.image.present?%>
        <%= image_tag(product.image.thumb.url)%>
        <% else %>
        <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail")%>
        <% end %>
        <% end %>
      </td>
      <td><%= product.description%></td>

      <td><%= product.quantity%></td>
      <td>$ <%= product.price%></td>
      <td>
        <%= link_to("delete", admin_product_path(product), method: :delete, :data => {confirm: "Are you sure?"})%>|
        <%= link_to("Edit", edit_admin_product_path(product))%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
