<h1>Product list</h1>

<div class="container">
  <%= link_to("Add product", new_admin_product_path(@product), class: "btn btn-primary pull-right")%>
</div>
<div class="container">
<table class="table">
  <thead>
    <tr>
      <th>title</th>
      <th>description</th>
      <th>image</th>
      <th>quantity</th>
      <th>price</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product|%>
    <tr>
      <td><%=link_to( product.title, admin_product_path(product))%></td>
      <td><%= product.description%></td>
      <td>
        <% if product.image.present?%>
        <%= image_tag(product.image.thumb.url)%>
        <% end %>
      </td>
      <td><%= product.quantity%></td>
      <td><%= product.price%></td>
      <td><%= link_to("delete", admin_product_path(product), method: :delete, :data => {confirm: "Are you sure?"})%></td>
      <td><%= link_to("Edit", edit_admin_product_path(product))%></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
