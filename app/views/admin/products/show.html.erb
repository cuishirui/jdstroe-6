<div class="container">
  <h1><%= @product.title %></h1>

  <div class="row">
    <div class="col-md-6">
       <% if @product.image.present?%>
       <%= image_tag(@product.image.medium.url)%>
       <% end %>
    </div>
    <div class="col-md-6">
      <%= @product.description%><br>
      数量：<%= @product.quantity%><br>
      价格：<%= @product.price%>
    </div>
  </div>

</div>
